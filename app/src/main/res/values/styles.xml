<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#AA3300</item>
        <item name="colorPrimaryDark">#BB3300</item>
        <item name="colorAccent">#536DFE</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowReenterTransition">@android:transition/slide_top</item>
    </style>
    
    <style name="TitlesActivity">

        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverviewApp">

        <item name="android:textSize">16sp</item>

    </style>
</resources>
